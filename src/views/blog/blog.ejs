<body>
    <div style="margin-top:30px;" class="container">
        <h3 >News And Updates ðŸŽ‰</h3>
        <%data[0].posts.sort((a,b)=>{
            return  new Date(b.createdAt) -  new Date(a.createdAt)
            }).forEach(post=>{%>
            <div style="width:100%;height:100px;display:inline-block" class="post-card">
                <div class="post-header">
                    <h5><%=post.title%> <span> <%=moment(post.createdAt).fromNow()%> (<%=moment(post.createdAt).format('MMMM Do YYYY')%>)</span></h5>
                  
                </div>
                <div class="post-body">
                    <%-md.render(post.content.slice(0,300))%>
        
                </div>
                <a class='post-read-more' href='/blog/post/<%=post.id%>'>Read More</a>
        
              </div>
            <%})%>

