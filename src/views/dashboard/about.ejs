    function getParameterByName(name, url) {
     if (!url) url = window.location.href;
     name = name.replace(/[\[\]]/g, "\\$&");
     var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
         results = regex.exec(url);
     if (!results) return null;
     if (!results[2]) return '';
     return decodeURIComponent(results[2].replace(/\+/g, " "));
 }
$( document ).ready(function() {
        if(getParameterByName('status')) {
        var status = getParameterByName('status')
        var msg = getParameterByName('msg')
        var plan = getParameterByName('plan')
        var date = getParameterByName('date')
        if(!plan) return;
        if(!date) return;
        if(!msg) return;
        Swal.fire({
  title: msg,
  text: `Plan ${plan} is now activated. and now you can use premium settings up to ${date}`,

  icon:status,
  showClass: {
    popup: 'animate__animated animate__fadeInDown'
  },
  hideClass: {
    popup: 'animate__animated animate__fadeOutUp'
  }
})
      }
});
    function changeInvite(id) {

fetch(`/dashboard/server/<%=data.id%>/updateInvite?channel_id=${id}`, { method: "POST",
headers: { "Content-Type": "application/json" },

})
.then(res => res.json())
.then(async response => {
  toastr[response.icon](response.content)
  document.getElementById('invites').value = response.invite.url
  document.getElementById('invite-btn').innerHTML = response.channel
})     
}  
function confirm() {

  var divElem = document.getElementById("content");
var inputElements = divElem.querySelectorAll("input, select, checkbox, textarea");
var el = {}
inputElements.forEach(i=>{
  el[`${i.name}`] = {
  name:i.name,
  content:i.value,
  required:i.hasAttribute("required"),
    id:i.id,
}
})
fetch(`/dashboard/server/<%=data.id%>/update`, { method: "POST",
headers: { "Content-Type": "application/json" },

body:JSON.stringify(el),
})
.then(res => res.json())
.then(async response => {
  toastr[response.icon](response.content)
  if(response.icon === 'error')  {
    $('html, body').animate({scrollTop: $(`#${response.el}`).offset().top -100 }, 'slow');

  }
})     
}  

