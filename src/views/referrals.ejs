  <script>
    function copy(id) {
      // Get the text field
      var copyText = document.getElementById(id);

      // Select the text field
      copyText.select();
      copyText.setSelectionRange(0, 99999); // For mobile devices

      // Copy the text inside the text field
      navigator.clipboard.writeText(copyText.value);

      // Alert the copied text
    }
    function sendForm() {
      var form = document.getElementById("server-id").value;
      fetch(`/partners/sendForm?serverId=${form}`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
      })
        .then((res) => res.json())
        .then(async (response) => {
          toastr[response.icon](response.content);
        });
    }
    function changePartnerServer(id) {
      fetch(`/partners/changePartnerServer?serverId=${id}`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
      })
        .then((res) => res.json())
        .then(async (response) => {
          toastr[response.icon](response.content);
        });
    }
